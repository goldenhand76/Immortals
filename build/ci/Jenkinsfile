pipeline {
    agent any 
    // { 
    //     node {
    //         label 'docker-agent-golang'
    //         }
    //     docker { image 'golang:1.22-alpine'}
    //   }

    triggers {
        pollSCM '* * * * *'
    }

    tools { go '1.22.1'}

    stages {
        stage('Clone'){
            steps {
                git branch: 'main', url: 'https://github.com/goldenhand76/Immortals.git'
            }
        }

        stage('Build'){
            steps {
                sh '''
                go version
                docker build -f ./build/package/Dockerfile -t ghcr.io/goldenhand76/immortals:${BUILD_NUMBER} .
                '''
            }
        }

        stage('Test'){
            steps{
                sh '''
                go build ./cmd/web/main.go
                ./main.go
                '''
            }
        }
    }   
}
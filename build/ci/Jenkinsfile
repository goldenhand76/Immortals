pipeline {
    agent any

    triggers {
        pollSCM '* * * * *'
    }

    stages {
        stage('Clone'){
            steps {
                git url: 'https://github.com/goldenhand76/Immortals.git'
            }
        }

        stage('Build'){
            steps {
                sh '''
                docker build -f ./build/package/Dockerfile -t ghcr.io/goldenhand76/immortals:${BUILD_NUMBER} .
                '''
            }
        }

        stage('Test'){
            steps{
                sh '''
                docker run -it immortals:${BUILD_NUMBER}
                curl localhost:5000
                '''
            }
        }
    }   
}